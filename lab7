--1
CREATE INDEX idx_name ON countries(name);
--2
CREATE INDEX idx_name_surname ON employees(name, surname);
--3
CREATE UNIQUE INDEX idx_salary ON employees(salary);
--4
CREATE INDEX idx_name_sub ON employees(substring(name from 1 for 4));
--5
CREATE INDEX idx_dep_salary ON employees(department_id, salary);
CREATE INDEX idx_budget ON departments(budget);
